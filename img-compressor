            </div>
            <div class="feature-card">
                <i class="fas fa-mobile-alt"></i>
                <h3>Fully Responsive</h3>
                <p>Optimized for all devices - desktops, tablets, and smartphones with seamless touch support.</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-chart-line"></i>
                <h3>Advanced Algorithms</h3>
                <p>Proprietary compression techniques deliver superior results compared to standard methods.</p>
            </div>
        </div>
        
        <footer>
            <p>&copy; 2023 Ultra Image Compressor. All rights reserved.</p>
            <p>This tool processes images entirely in your browser - no files are uploaded to any server.</p>
        </footer>
    </div>
    
    <script>
        // DOM Elements
        const fileInput = document.getElementById('file-input');
        const uploadArea = document.getElementById('upload-area');
        const browseBtn = document.getElementById('browse-btn');
        const compressBtn = document.getElementById('compress-btn');
        const downloadBtn = document.getElementById('download-btn');
        const qualitySlider = document.getElementById('quality');
        const qualityDisplay = document.getElementById('quality-display');
        const qualityProgress = document.getElementById('quality-progress');
        const formatSelect = document.getElementById('format');
        const originalPreview = document.getElementById('original-preview');
        const compressedPreview = document.getElementById('compressed-preview');
        const originalStats = document.getElementById('original-stats');
        const compressedStats = document.getElementById('compressed-stats');
        const reductionElement = document.getElementById('reduction');
        const bandwidthElement = document.getElementById('bandwidth');
        const savingsElement = document.getElementById('savings');
        const timeElement = document.getElementById('time');
        const powerOptions = document.querySelectorAll('.power-option');
        const compressionControls = document.getElementById('compression-controls');
        const highlightControls = document.getElementById('highlight-controls');
        
        // Global variables
        let originalFile = null;
        let compressedFile = null;
        let compressedBlob = null;
        let currentPower = 'low';
        
        // Event Listeners
        browseBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleFileSelect);
        uploadArea.addEventListener('dragover', handleDragOver);
        uploadArea.addEventListener('drop', handleDrop);
        qualitySlider.addEventListener('input', updateQualityDisplay);
        compressBtn.addEventListener('click', compressImage);
        downloadBtn.addEventListener('click', downloadImage);
        
        // Power option selection
        powerOptions.forEach(option => {
            option.addEventListener('click', () => {
                powerOptions.forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
                currentPower = option.dataset.power;
                applyPowerSettings();
            });
        });
        
        // Initialize
        updateQualityDisplay();
        
        // Highlight compression controls on page load
        setTimeout(() => {
            highlightControls.classList.add('compression-highlight');
            setTimeout(() => {
                highlightControls.classList.remove('compression-highlight');
            }, 2000);
        }, 1000);
        
        // Functions
        function handleDragOver(e) {
            e.preventDefault();
            uploadArea.style.borderColor = '#00f2fe';
            uploadArea.style.backgroundColor = '#e6f4ff';
        }
        
        function handleDrop(e) {
            e.preventDefault();
            uploadArea.style.borderColor = '#4facfe';
            uploadArea.style.backgroundColor = '#f8fbff';
            
            if (e.dataTransfer.files.length) {
                handleFile(e.dataTransfer.files[0]);
            }
        }
        
        function handleFileSelect(e) {
            if (e.target.files.length) {
                handleFile(e.target.files[0]);
            }
        }
        
        function handleFile(file) {
            if (!file.type.match('image.*')) {
                alert('Please select an image file (JPG, PNG, WebP)');
                return;
            }
            
            if (file.size > 10 * 1024 * 1024) {
                alert('File size exceeds 10MB limit. Please choose a smaller image.');
                return;
            }
            
            originalFile = file;
            compressedFile = null;
            compressedBlob = null;
            
            // Display original image
            const reader = new FileReader();
            reader.onload = function(e) {
                originalPreview.innerHTML = `<img src="${e.target.result}" alt="Original preview">`;
                originalStats.innerHTML = `<strong>${file.name}</strong><br>${formatFileSize(file.size)}`;
                
                // Enable compress button
                compressBtn.disabled = false;
                downloadBtn.disabled = true;
                
                // Reset compressed preview
                compressedPreview.innerHTML = '<i class="fas fa-compress-alt"></i>';
                compressedStats.textContent = 'Upload image to begin';
                reductionElement.textContent = '0%';
                bandwidthElement.textContent = '0 KB';
                savingsElement.textContent = '0 KB';
                timeElement.textContent = '0 ms';
                
                // Scroll to compression controls
                compressionControls.scrollIntoView({ behavior: 'smooth', block: 'center' });
                highlightControls.classList.add('compression-highlight');
                setTimeout(() => {
                    highlightControls.classList.remove('compression-highlight');
                }, 2000);
            };
            reader.readAsDataURL(file);
        }
        
        function updateQualityDisplay() {
            const quality = qualitySlider.value;
            qualityDisplay.textContent = `${quality}%`;
            qualityProgress.style.width = `${quality}%`;
        }
        
        function applyPowerSettings() {
            switch(currentPower) {
                case 'low':
                    qualitySlider.value = 85;
                    break;
                case 'medium':
                    qualitySlider.value = 65;
                    break;
                case 'high':
                    qualitySlider.value = 40;
                    break;
                case 'extreme':
                    qualitySlider.value = 15;
                    break;
            }
            updateQualityDisplay();
        }
        
        function compressImage() {
            if (!originalFile) return;
            
            // Show processing state
            compressBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Compressing...';
            compressBtn.classList.add('processing');
            compressBtn.disabled = true;
            
            const quality = parseInt(qualitySlider.value) / 100;
            const format = formatSelect.value === 'auto' ? originalFile.type : formatSelect.value;
            
            // Record start time
            const startTime = performance.now();
            
            // Use compressor.js for image compression
            new Compressor(originalFile, {
                quality: quality,
                mimeType: format,
                success(result) {
                    // Calculate processing time
                    const endTime = performance.now();
                    const processingTime = endTime - startTime;
                    
                    compressedBlob = result;
                    compressedFile = new File([result], `compressed_${originalFile.name}`, {
                        type: result.type,
                        lastModified: Date.now()
                    });
                    
                    // Display compressed image
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        compressedPreview.innerHTML = `<img src="${e.target.result}" alt="Compressed preview">`;
                        compressedStats.textContent = formatFileSize(compressedFile.size);
                        
                        // Calculate and display savings
                        const originalSize = originalFile.size;
                        const compressedSize = compressedFile.size;
                        const reduction = Math.round((1 - compressedSize / originalSize) * 100);
                        const savings = originalSize - compressedSize;
                        
                        reductionElement.textContent = `${reduction}%`;
                        bandwidthElement.textContent = formatFileSize(savings);
                        savingsElement.textContent = formatFileSize(savings);
                        timeElement.textContent = `${processingTime.toFixed(0)} ms`;
                        
                        // Enable download button
                        downloadBtn.disabled = false;
                        
                        // Reset compress button
                        compressBtn.innerHTML = '<i class="fas fa-compress-alt"></i> Compress Image';
                        compressBtn.classList.remove('processing');
                        compressBtn.disabled = false;
                        
                        // Scroll to results
                        downloadBtn.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    };
                    reader.readAsDataURL(compressedBlob);
                },
                error(err) {
                    console.error('Compression error:', err);
                    alert('Error compressing image. Please try again with different settings.');
                    
                    // Reset compress button
                    compressBtn.innerHTML = '<i class="fas fa-compress-alt"></i> Compress Image';
                    compressBtn.classList.remove('processing');
                    compressBtn.disabled = false;
                }
            });
        }
        
        function downloadImage() {
            if (!compressedBlob) return;
            
            const url = URL.createObjectURL(compressedBlob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `compressed_${originalFile.name.replace(/\.[^/.]+$/, "")}.${compressedBlob.type.split('/')[1]}`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
        
        // SEO Enhancement: Add structured data
        const structuredData = {
            "@context": "https://schema.org",
            "@type": "WebApplication",
            "name": "Ultra Image Compressor",
            "description": "Free online image compression tool that reduces image file size by up to 95% while maintaining quality",
            "applicationCategory": "Utility",
            "operatingSystem": "All",
            "offers": {
                "@type": "Offer",
                "price": "0",
                "priceCurrency": "USD"
            }
        };
        
        const script = document.createElement('script');
        script.type = "application/ld+json";
        script.text = JSON.stringify(structuredData);
        document.head.appendChild(script);
    </script>
</body>
</html>
